{
	"compilerOptions": {
		"target": "ES2017",
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"importHelpers": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": false,
		"sourceMap": true,
		"allowJs": true,
		"baseUrl": ".",
		"types": [
			"@types/node"
		],
		"paths": {
			"@/*": [
				"src/*"
			],
		
		},
		"lib": [
			"esnext",
			"dom",
			"dom.iterable",
			"scripthost"
		]
	},
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
	"exclude": [
		"node_modules",
		"build",
		"dist"
	]
}
